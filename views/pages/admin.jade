extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post",action="/admin/movie/new")
				input(type="hidden",name="movie[0][_id]",value="#{movie[0]._id}")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 电影名称
					.col-sm-offset-right-2.col-sm-8
						input#inputTitle.form-control(type="text",name="movie[0][title]",value="#{movie[0].title}")
				.form-group
					label.col-sm-2.control-label(for="inputDirector") 导演
					.col-sm-offset-right-2.col-sm-8
						input#inputDirector.form-control(type="text",name="movie[0][director]",value="#{movie[0].director}")
				.form-group
					label.col-sm-2.control-label(for="inputCountry") 国家
					.col-sm-offset-right-2.col-sm-8
						input#inputCountry.form-control(type="text",name="movie[0][country]",value="#{movie[0].country}")
				.form-group
					label.col-sm-2.control-label(for="inputLanguage") 语言
					.col-sm-offset-right-2.col-sm-8
						input#inputLanguage.form-control(type="text",name="movie[0][language]",value="#{movie[0].language}")
				.form-group
					label.col-sm-2.control-label(for="inputPoster") 海报地址
					.col-sm-offset-right-2.col-sm-8
						input#inputPoster.form-control(type="text",name="movie[0][poster]",value="#{movie[0].poster}")
				.form-group
					label.col-sm-2.control-label(for="inputFlash") 片源地址
					.col-sm-offset-right-2.col-sm-8
						input#inputFlash.form-control(type="text",name="movie[0][flash]",value="#{movie[0].flash}")
				.form-group
					label.col-sm-2.control-label(for="inputReleaseDate") 上映年份
					.col-sm-offset-right-2.col-sm-8
						input#inputReleaseDate.form-control(type="text",name="movie[0][release_date]",value="#{movie[0].release_date}")
				.form-group
					label.col-sm-2.control-label(for="inputSummary") 电影简介
					.col-sm-offset-right-2.col-sm-8
						input#inputSummary.form-control(type="text",name="movie[0][summary]",value="#{movie[0].summary}")
				.form-group
					.col-sm-offset-2.col-sm-8
						button.btn.btn-default(type="submit") 录入