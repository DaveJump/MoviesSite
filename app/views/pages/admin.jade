extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post",action="/admin/movie",enctype="multipart/form-data")
				.form-group
					label.col-sm-2.control-label 豆瓣同步
					.col-sm-offset-right-2.col-sm-8
						input#douban.form-control(type="text")

				if movie._id
					input(type="hidden",name="movie[_id]",value=movie._id)
				.form-group
					label.col-sm-2.control-label(for="inputCategory") 电影分类
					.form-group
						.col-sm-offset-right-2.col-sm-8
							each cate in categories
								label.radio-inline
									if movie._id
										input(type="radio",name="movie[category]",value=cate._id,checked=cate._id.toString()==movie.category.toString())
									else
										input(type="radio",name="movie[category]",value=cate._id)
									| #{cate.name}
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 电影名称
					.col-sm-offset-right-2.col-sm-8
						input#inputTitle.form-control(type="text",name="movie[title]",value=movie.title)
				.form-group
					label.col-sm-2.control-label(for="inputDirector") 导演
					.col-sm-offset-right-2.col-sm-8
						input#inputDirector.form-control(type="text",name="movie[director]",value=movie.director)
				.form-group
					label.col-sm-2.control-label(for="inputCountry") 国家
					.col-sm-offset-right-2.col-sm-8
						input#inputCountry.form-control(type="text",name="movie[country]",value=movie.country)
				.form-group
					label.col-sm-2.control-label(for="inputLanguage") 语言
					.col-sm-offset-right-2.col-sm-8
						input#inputLanguage.form-control(type="text",name="movie[language]",value=movie.language)
				.form-group
					label.col-sm-2.control-label(for="inputPoster") 海报地址
					.col-sm-offset-right-2.col-sm-8
						input#inputPoster.form-control(type="text",name="movie[poster]",value=movie.poster)
				.form-group
					label.col-sm-2.control-label(for="uploadPoster") 海报上传
					.col-sm-offset-right-2.col-sm-8
						input#uploadPoster(type="file",name="poster")
				.form-group
					label.col-sm-2.control-label(for="inputFlash") 片源地址
					.col-sm-offset-right-2.col-sm-8
						input#inputFlash.form-control(type="text",name="movie[flash]",value=movie.flash)
				.form-group
					label.col-sm-2.control-label(for="inputReleaseDate") 上映年份
					.col-sm-offset-right-2.col-sm-8
						input#inputReleaseDate.form-control(type="text",name="movie[release_date]",value=movie.release_date)
				.form-group
					label.col-sm-2.control-label(for="inputSummary") 电影简介
					.col-sm-offset-right-2.col-sm-8
						input#inputSummary.form-control(type="text",name="movie[summary]",value=movie.summary)
				.form-group
					.col-sm-offset-2.col-sm-8
						button.btn.btn-default(type="submit") 录入
	script(src="/scripts/admin.js")